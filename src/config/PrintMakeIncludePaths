#!/bin/csh -f
###########################################################################
#
# PrintMakeIncludePaths
#
# - This script generates make.include file paths. It has to be executed
#   from the "src" directory of MissionLab
#
# Note: 1st argument = Enable OpenGL or not (1 or 0)
#       2nd argument = Enable Mobility or not (1 or 0)
#       3rd argument = Enable OpenCV or not (1 or 0)
#       4th argument = Enable Gazebo or not (1 or 0)
#
# Written by: Yoichiro Endo
#
###########################################################################

# $Id: PrintMakeIncludePaths,v 1.2 2008/07/15 22:33:20 endo Exp $

# Setting up the script
cd ../
set MLAB_HOME=$PWD

set IPT_DIR=$MLAB_HOME/src/ipt
set MLAB_STATIC=
#set MLAB_STATIC -static

if ($1 == "1") then
    set ENABLE_OPENGL=1
else
    set ENABLE_OPENGL=0
endif

if ($2 == "1") then
    set ENABLE_MOBILITY=1
else
    set ENABLE_MOBILITY=0
endif

if ($3 == "1") then
    set ENABLE_OPENCV=1
else
    set ENABLE_OPENCV=0
endif

if ($4 == "1") then
    set ENABLE_GAZEBO=1
else
    set ENABLE_GAZEBO=0
endif

if ($5 == "1") then
    set USE_IPC=1
else
    set USE_IPC=0
endif

echo "#---------------------------------------------------------------------"
echo "# make.include: Automatically generated by '$0'"
echo "#---------------------------------------------------------------------"
echo "MLAB_HOME = $MLAB_HOME"
echo "IPT_DIR = $IPT_DIR"
echo "INSTALL_DIR = $IPT_DIR"
echo "IPT_INCS = -I$MLAB_HOME/include"
echo "IPT_LIBS = -L$MLAB_HOME/lib -lipt"
echo "MLAB_STATIC = $MLAB_STATIC"
echo "ENABLE_OPENGL = $ENABLE_OPENGL"
echo "ENABLE_MOBILITY = $ENABLE_MOBILITY"
echo "ENABLE_OPENCV = $ENABLE_OPENCV"
echo "ENABLE_GAZEBO = $ENABLE_GAZEBO"
echo "USE_IPC = $USE_IPC"
echo "export MLAB_HOME IPT_DIR INSTALL_DIR IPT_INCS IPT_LIBS MLAB_STATIC ENABLE_OPENGL ENABLE_MOBILITY ENABLE_OPENCV ENABLE_GAZEBO USE_IPC"
